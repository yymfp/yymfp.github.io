<% if (page.total > 1){ %>
	<ul class="am-pagination">
		<% if (page.prev) { %>
			<li class="am-pagination-prev">
				<a href="<%- url_for(page.prev_link) %>">&laquo;上一页</a>
			</li>
		<% } %>
		
		<% if (page.next) { %>
			<li class="am-pagination-next">
				<a href="<%- url_for(page.next_link) %>">下一页&raquo;</a>
			</li>
		<% } %>
	</ul>
<% } %>

        
  
  
